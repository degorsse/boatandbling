<p id="notice"><%= notice %></p>
<br>

<h1>Your listing of Bookings with Bling Bling Co |</h1>Account email: <%= @user.email%>
<br>

<table class="table table_striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Harbour</th>
      <th>Capacity (persons)</th>
      <th>Size (meter)</th>
      <th>Price per day</th>
      <th>Total_price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.boat.name %></td>
        <td><%= booking.boat.harbour.name %>

        <td><%= booking.boat.price_per_day %></td>
        <td><%= booking.start_date %></td>
        <td><%= booking.end_date %></td>
        <td><%= @total_amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Go to all Harbours', harbours_path, class: "btn btn-primary" %>
<%= link_to 'Back to list of harbours', harbours_path, class: "btn btn-primary" %>




