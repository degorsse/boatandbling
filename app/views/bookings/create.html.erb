<div class="container">
  <div class="row ">
  <h1 class="title">Creation of a new booking</h1>
   <br>

          <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">&nbsp;*Start Date &nbsp;</span>
            <input type="Date" class="form-control" name="start_date_search" placeholder= <%= Time.now  %> aria-describedby="basic-addon1">
            <span class="input-group-addon" id="basic-addon1">&nbsp;*End Date &nbsp;</span>
            <input type="Date" class="form-control" name="end_date_search" placeholder="End Date" aria-describedby="basic-addon1">
          </div>
          <br>
<div class="input-group">
            <span class="input-group-addon" id="basic-addon1">&nbsp;*Boat</span>
            <input type="Date" class="form-control" name="boat" aria-describedby="basic-addon1">
            <span class="input-group-addon" id="basic-addon1">
          </div>
          <br>
          <br>

          <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">&nbsp;*Harbour&nbsp;</span>
            <!-- <input type="text" select_tag= class="form-control" name="harbour_search" placeholder="Harbour" aria-describedby="basic-addon1"> -->
            <%= select(:harbour_search, :harbour_search, Harbour.all.collect {|h| [h.city, h.city]}, {}, {class: 'form-control'})%>
          </div>
          <br>

            <br>
            <input type="submit" class="btn btn-info" placeholder="Validate">
  </div>
</div>


