
<h1>Select your Harbour</h1>


<table class="table table_striped">
  <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>City</th>
        <th colspan="3"></th>
      </tr>
  </thead>

  <tbody>
    <% @harbours.each do |h| %>
      <tr>
          <td><%= h.name %></td>
          <td><%= h.address %></td>
          <td><%= h.city %></td>

          <td><%= link_to 'Show', harbour_path(h) %></td>
          <td><%= link_to 'Edit', edit_harbour_path(h) %></td>
          <td><%= link_to 'Destroy', harbour_path(h), method: :delete, data: { confirm: 'Are you sure?' } %></td>

          <td><%= link_to 'SELECT', new_harbour_boat_path(h), class: "btn btn-primary" %></td>

      </tr>
    <% end %>
  </tbody>
</table>




