<h1>Welcome in <%= @harbour.name %> </h1>

<p>list of boats in the harbour</p>


<table class="table table_striped">
<thead>
    <tr>
      <th>Name</th>
      <th>Capacity (persons)</th>
      <th>Size (meter)</th>
      <th>Price per day</th>
      <th>Description</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @selection.each do |b| %>
        <tr>
          <td><%= b.name %></td>
          <td><%= b.capacity %></td>
          <td><%= b.size %></td>
          <td><%= b.price_per_day %></td>
          <td><%= b.description %></td>†Ò
        </tr>

      <% end %>

  </tbody>
</table>


<td><%= link_to 'Back to harbours',harbours_path, class: "btn btn-primary" %></td>
