<h1>Welcome in <%=@harbour.name%> </h1>

<p>list of boats in the harbour</p>


<table class="table table_striped">
<thead>
    <tr>
      <th>Name</th>
      <th>Harbour</th>
      <th>Capacity (persons)</th>
      <th>Size (meter)</th>
      <th>Price per day</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @selection.each do |boat| %>
        <tr>
          <td><%= boat.name %></td>
        <td><%= boat.harbour.name %>
        <td><%= boat.capacity %></td>
        <td><%= boat.size %></td>
        <td><%= boat.price_per_day %></td>
        <td><%= boat.description %></td>
        <td><%= link_to 'Show', harbour_boat_path(boat.harbour, boat) %></td>
        <td><%= link_to 'Edit', edit_harbour_boat_path(boat.harbour, boat) %></td>
        <td><%= link_to 'Destroy', harbour_boat_path(boat.harbour, boat), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>

      <% end %>

  </tbody>
</table>


<td><%= link_to 'Back to harbours',harbours_path, class: "btn btn-primary" %></td>
<td><%= link_to 'Add a boat to this harbour',new_harbour_boat_path(@harbour), class: "btn btn-primary" %></td>


















