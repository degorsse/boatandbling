
<%= simple_form_for [@harbour, @boat] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :capacity %>
    <%= f.input :size %>
    <%= f.input :price_per_day %>
    <%= f.input :description %>
    <%= f.input :picture %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
