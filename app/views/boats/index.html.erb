<p id="notice"><%= notice %></p>
<br>

<h1>Existing Boats in <%= @harbour.name %></h1>
<br>

<table class="table table_striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Harbour</th>
      <th>Capacity (persons)</th>
      <th>Size (meter)</th>
      <th>Price per day</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @harbour.boats.each do |boat| %>
      <tr>
        <td><%= boat.name %></td>
        <td><%= boat.harbour.name %>
        <td><%= boat.capacity %></td>
        <td><%= boat.size %></td>
        <td><%= boat.price_per_day %></td>
        <td><%= boat.description %></td>
        <td><%= link_to 'Show', harbour_boat_path(boat.harbour, boat) %></td>
        <td><%= link_to 'Edit', edit_harbour_boat_path(boat.harbour, boat) %></td>
        <td><%= link_to 'Destroy', harbour_boat_path(boat.harbour, boat), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Boat', harbours_path, class: "btn btn-primary" %>
<%= link_to 'Back to list of harbours', harbours_path, class: "btn btn-primary" %>




